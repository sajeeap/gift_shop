<section class="content-main">
    <form action="/admin/add-product" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                    
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label for="product_name" class="form-label">Product title</label>
                            <input type="text" placeholder="Type here" name="productName" class="form-control" id="product_name">
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="categoryName">
                                <% categories.forEach(category => { %>
                                    <option value="<%- category._id %>"><%- category.name %></option>
                                <% }) %>
                            </select>
                        </div>
                       
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label class="form-label">Add Stock</label>
                                    <div class="row gx-2">
                                        <input placeholder="$" name="productStock" type="number" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label class="form-label">Price</label>
                                    <div class="row gx-2">
                                        <input placeholder="$" type="number" class="form-control" name="price">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Product description</label>
                                <textarea placeholder="Type here" class="form-control" name="productDespt" rows="4"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Select Primary Image</h4>
                                </div>
                                <div class="card-body">
                                    <div class="input-upload">
                                      
                                        <label for="image" class="form-label">
                                            <img id="preview" src="/uploads/products-images/image-holder-icon-614x460.png" alt="" width="150px">
                                        </label>
                                        <img src="../assets/imgs/theme/upload.svg" id="preview" alt="">
                                    </div>
                                    
                                    <div class="input-upload">  

                                        <input class="form-control" type="file" id="inputImage" >
                                        <img id="image" height="1000" name="primaryImage" style="display:none;">
                                        
                                        <button   id="cropButton">Crop and Upload</button>
                                        
                                        
                                    </div>                                    
                                </div>
                                

                            </div>
                        </div> <!-- card end// -->
                        <div class="col-lg-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Select Secondary Images </h4>
                                    <p>Maximum 3 images</p>
                                </div>
                                <div class="card-body">
                                    <div class="input-upload">
                                       
                                        <input class="form-control"  name="images" multiple required type="file">
                                    </div>
                                    
                                </div>
                            </div>
                        </div> <!-- card end// -->
                        <button class="btn btn-md rounded font-sm hover-up" type="submit">Add Products</button>
                    </div>
                </div> <!-- card end// -->
                
            </div>
        </div>
    </form>
</section>

<style>
    img {
        max-width: 100%;
    }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.js"></script>
    
<script>
    let cropper;  // Declare cropper at a higher scope

    document.getElementById('inputImage').addEventListener('change', function (event) {
        const files = event.target.files;
        const done = function (url) {
            inputImage.value = '';
            image.src = url;
            image.style.display = 'block';
            cropper = new Cropper(image, {
                aspectRatio: 1,
                viewMode: 3,
            });
        };
        const inputImage = this;
        const image = document.getElementById('image');

        if (files && files.length > 0) {
            const file = files[0];
            const reader = new FileReader();
            reader.onload = function (event) {
                done(reader.result);
            };
            reader.readAsDataURL(file);
        }
    });

    document.getElementById('cropButton').addEventListener('click', function () {
        if (cropper) {  // Check if cropper is defined
            const cropedImg = cropper.getCroppedCanvas().toDataURL("image/png");
            
            document.getElementById("preview").src = cropedImg;
            document.getElementById("oldpreview").style.display = "none";
        } else {
            alert('Please select an image to crop.');
        }
   });
</script>